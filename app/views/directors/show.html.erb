<div class="page-header">
  <h1><%= @director.name %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Dob:</dt>
      <dd><%= @director.dob %></dd>

      <dt>Bio:</dt>
      <dd><%= truncate(@director.bio) %></dd>

      <dt>Image:</dt>
      <dd><img src="<%= @director.image_url %>" width="100"></dd>

      <dt>Number of movies:</dt>
      <dd><%= @director.movies.count %></dd>

      <dt>Filmography:</dt>
      <dd>
        <ul class="list-group">
          <% @director.movies.each do |movie| %>
          <li class="list-group-item">
            <a href="/movies/<%= movie.id %>">
              <%= movie.title %>
            </a>
            (<%= movie.year %>)
          </li>
          <% end %>

          <li class="list-group-item">
            <form action="/create_movie" method="post">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

              <div class="form-group">
                <label for="title" class="control-label">
                  Title
                </label>
                <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @movie.title %>">
              </div>

              <div class="form-group">
                <label for="year" class="control-label">
                  Year
                </label>
                <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @movie.title %>">
              </div>

              <input name="director_id" type="hidden" value="<%= @director.id %>">

              <button class="btn btn-success">
                Create Movie
              </button>
              or
              <a href="/movies">Cancel</a>
            </form>
          </li>
        </ul>
      </dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/directors" class="btn btn-primary">
        Back
      </a>
      <a href="/directors/<%= @director.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_director/<%= @director.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
