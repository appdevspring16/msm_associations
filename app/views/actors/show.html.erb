<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @actor.image_url %></dd>

      <dt>Number of characters played</dt>
      <dd><%= @actor.characters.count%></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>

    <ul>
      <li><h3>Movies</h3></li>
      <% @actor.characters.each do |character|%>
      <li><a href="/movies/<%=character.movie_id%>"><%=character.movie.title%></a>
      (<%=character.name%>)
      </li>
      <%end%>
    </ul>
    <ul>
      <li><h3>Characters</h3></li>
      <% @actor.characters.each do |character|%>
      <li><a href="/characters/<%=character.id%>"><%=character.name%></a>

      </li>
      <%end%>
    </ul>
  </div>




  <div class="row">
    <div class="col-md-12">
      <form action="/create_character" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <h3>add character to actor</h3>
        <!-- Label and input for movie_id -->
        <div class="form-group">
          <label for="movie_id" class="control-label">
            Movie
          </label>

          <%= select_tag(:movie_id, options_from_collection_for_select(Movie.all, :id, :title), :class => "form-control")%>
          <p>
            <a href="/movies/new">add a new movie</a>
          </p>
        </div>

        <!-- Label and input for actor_id -->
        <div class="form-group">


        <input type="hidden"  name="actor_id" placeholder="Name" class="form-control" value="<%= @actor.id %>">
        </div>

        <!-- Label and input for name -->
        <div class="form-group">
          <label for="name" class="control-label">
            Name
          </label>

          <input type="text" id="name" name="name" placeholder="Name" class="form-control">
        </div>

        <button class="btn btn-success">
          Create Character
        </button>
        or
        <a href="/characters">Cancel</a>
      </form>
    </div>
  </div>


</div>
