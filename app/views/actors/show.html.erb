<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= truncate(@actor.bio) %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @actor.image_url %>"></dd>

      <dt>Number of Movie Roles</dt>
      <dd><%= @actor.characters.count %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<ul>
   <% @actor.characters.each do |character|%>
   <li>
     <tr>
       <td><a href="/characters/<%= character.id %>"><%= character.name %></a></td>
       <td>(<a href="/actors/<%= character.actor_id %>"><%= character.movies.try(:title) %></a>)</td>
     </tr>
   </li>
   <%end%>
</ul>

<form action="/create_character" method="post">

  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label for="name" class="control-label">
      Movie Title
    </label>

    <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @character.name %>">
  </div>

  <input type="hidden" name="actor_id" value="<%= @actor.id %>">

  <div class="form-group">
    <label for="name" class="control-label">
      Character Name
    </label>

    <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
  </div>

  <button class="btn btn-success">
    Create Character
  </button>
  or
  <a href="/characters">Cancel</a>
</form>
