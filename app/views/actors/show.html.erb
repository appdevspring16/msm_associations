<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd>
        <img src="<%= @actor.image_url %>" alt="" />
        </dd>

      </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<dt>Number of roles</dt>
<dd><%= @actor.characters.count %></dd>

<dt>Roles Played</dt>
  <ul>
    <% @actor.characters.each do |character| %>
    <li><a href="/characters/<%= character.id %>">
      <%= character.name %> (<%= character.movie.title %>)</a>
    </li>
    <% end %>
  </ul>
