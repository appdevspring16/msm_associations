<div class="page-header">
  <h3>Character #<%= @character.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd><%= Movie.where(id: @character.movie_id).pluck('Title').first %></dd>

      <dt>Actor</dt>
      <dd><%= Character.joins(:Actor).where(id: @character.id).pluck('actors.name').first %></dd>

      <dt>Name</dt>
      <dd><%= @character.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/characters" class="btn btn-primary">
        Back
      </a>
      <a href="/characters/<%= @character.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_character/<%= @character.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
