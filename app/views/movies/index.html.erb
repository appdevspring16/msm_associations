<div class="page-header">
  <h1>
    Movies
    <a href="/movies/new" class="btn btn-lg btn-success">New Movie</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Director</th>
        <th>Year</th>
        <th>Actions</th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td><img src="<%= movie.image_url %>" width="75"></td>
        <td><%= movie.title %></td>
        <td>
          <a href="/directors/<%= movie.director_id %>" class="btn btn-link">
            <%= movie.director.name %>
          </a>
        </td>
        <td>
          <%= movie.year %></td>
        <td>
          <div class="btn-group-vertical">
          <a href="/movies/<%= movie.id %>" class="btn btn-primary">Show</a>
          <a href="/movies/<%= movie.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_movie/<%= movie.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </div>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
