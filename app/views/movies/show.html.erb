<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @movie.image_url %>" width="100"</dd>

      <dt>Director</dt>
      <dd>
        <a href="/directors/<%= @movie.director_id %>">
          <%= Director.find_by(:id => @movie.director_id).name %>
        </a>
      </dd>

      <dt>Cast</dt>
      <dd>
        <ul class="list-group">
          <% Character.where(:movie_id => @movie.id).each do |character| %>
          <li class="list-group-item">
            <a href="/actors/<%= character.actor_id %>"><%= Actor.find_by(:id => character.actor_id).name %></a> (<%= character.name %>)
          </li>
          <% end %>
        </ul>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
