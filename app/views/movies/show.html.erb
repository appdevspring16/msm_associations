<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= truncate(@movie.description) %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @movie.image_url %>"></dd>

      <dt>Director</dt>
      <dd>
        <a href ="/directors/<%= @movie.director_id%>">
        <%= @movie.directors.name %>
        </a>
      </dd>

      <dt>Characters in movie</dt>
      <dd><%= @movie.characters.count %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<ul>
   <% @movie.characters.each do |character|%>
   <li>
     <tr>
       <td><a href="/characters/<%= character.id %>"><%= character.name %></a></td>
       <td>(<a href="/actors/<%= character.actor_id %>"><%= character.actors.try(:name) %></a>)</td>
     </tr>
   </li>
   <%end%>
</ul>

<form action="/create_character" method="post">

  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <input type="hidden" name="movie_id" value="<%= @movie.id %>">

  <div class="form-group">
    <label for="actor_id" class="control-label">
      Actor
    </label>

    <input type="text" id="actor_id" name="actor_id" placeholder="Actor" class="form-control" value="<%= @character.actor_id %>">
  </div>

  <div class="form-group">
    <label for="name" class="control-label">
      Character Name
    </label>

    <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
  </div>

  <button class="btn btn-success">
    Create Character
  </button>
  or
  <a href="/characters">Cancel</a>
</form>
