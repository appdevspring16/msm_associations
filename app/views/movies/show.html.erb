<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><%= @movie.image_url %></dd>

      <dt>Director</dt>
      <dd><%= Movie.joins(:Director).where(title: @movie.title).pluck(:name).first %></dd>

      <dt>Number of Characters</dt>
      <dd><%= Movie.joins(:Characters).where(title: @movie.title).count %></dd>

      <dt>List of Characters</dt>
      <% Movie.joins(:Characters).where(title: @movie.title).pluck(:name).each do |character| %>
      <dd><%= character %></dd>
      <% end %>

      <dt>Cast</dt>
      <% Movie.joins(:Characters).where(title: @movie.title).pluck(:name).each do |character| %>
      <dd> <%= Character.joins(:Actor).where(name: character).pluck('actors.name').first %> </dd>
      <% end %>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>

    <div class="row">
      <div class="col-md-12">
        <form action="/create_character" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for movie_id -->
          <div class="form-group">
            <label for="movie_id" class="control-label">

            </label>
            <input type="hidden" id="movie_id" name="movie_id" placeholder="Movie" class="form-control" value="<%= @movie.id %>">
          </div>

          <!-- Label and input for actor_id -->
          <div class="form-group">
            <label for="actor_id" class="control-label">
              Actor
            </label>

            <input type="text" id="actor_id" name="actor_id" placeholder="Actor" class="form-control" value="">
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Name
            </label>

            <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
          </div>

          <button class="btn btn-success">
            Create Character
          </button>
          or
          <a href="/characters">Cancel</a>
        </form>
      </div>
    </div>



  </div>
</div>
