<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd><img src="<%= @movie.image_url %>" alt="" />
        </dd>

      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Director</dt>
      <dd>
        <a href="/directors/<%= @movie.director_id %>"><%= @movie.director.name %></a>
        </dd>

      <dt>Characters</dt>
      <dd>
        <%= @movie.characters.count %>
      </dd>
      <dd>
        <ul>
        <% @movie.characters.each do |character| %>
        <li><a href="/characters/<%= character.id %>">
          <%= character.actor.name%>
          (<%= character.name %>)
        </a></li>
        <% end %>
      </ul>
    </dd>
    <div class="page-header">
      <h3>Add Character</h3>
    </div>

    <div class="row">
      <div class="col-md-12">
        <form action="/create_character" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for movie_id -->
        <input type="hidden" name="movie_id" value="<%= @movie.id %>">

          <!-- Label and input for actor_id -->
          <div class="form-group">
            <label for="actor_id" class="control-label">
              Actor
            </label>

            <input type="text" id="actor_id" name="actor_id" placeholder="Actor" class="form-control">
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Name
            </label>

            <input type="text" id="name" name="name" placeholder="Name" class="form-control">
          </div>

          <button class="btn btn-success">
            Create Character
          </button>
          or
          <a href="/characters">Cancel</a>
        </form>
      </div>
    </div>
