<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Number of Characters</dt>
      <dd><%= @movie.characters.count %>
        </dd>

      <dt>Description</dt>
      <dd><%= truncate(@movie.description) %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @movie.image_url %>" alt="" />
        </dd>

      <dt>Director</dt>
      <dd><a href="/directors/<%= @director.id %>"><%= @director.name %></a>
        </dd>

        </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
  <tr>
    <th>
      Character Name
    </th>
    <th>
      Actor Name
    </th>
  </tr>

  <% @movie.characters.each do |character|  %>
  <tr>
    <td>
<a href="/characters/<%= character.id %>"><%= character.name %></a>
    </td>
    <td>
      <a href="/actors/<%= character.actor_id %>">
<%= character.actor.name %></a>
    </td>
  </tr>
  <% end %>
</table>
</div>
</div>
<hr>
<h2>Add a character</h2>
<div class="row">
  <div class="col-md-12">
    <form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for movie_id -->
      <div class="form-group">

        <input type="hidden" id="movie_id" name="movie_id" class="form-control" value="<%= @movie.id %>">
      </div>

      <!-- Label and input for actor_id -->
      <div class="form-group">
        <label for="actor_id" class="control-label">
          Actor
        </label>
        <%= select_tag(:actor_id, options_from_collection_for_select(Actor.all, :id, :name, @character.actor_id), :class => "form-control") %>

      </div>


      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Character Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
      </div>

      <button class="btn btn-success">
        Create Character
      </button>
      or
      <a href="/Movies/<%= @movie.id %>">Cancel</a>
    </form>
  </div>
</div>
<hr>
<div class="row">
<div class="col-md-12">
Can't find the actor? <a href="/actors/new">Add one.</a>
</div>
</div>
